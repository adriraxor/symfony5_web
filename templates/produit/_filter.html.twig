{{ form_start(form, {attr: {class: 'filter'}}) }}

    {{ form_row(form.keyword) }}

<div class="col-md-10" style="color: darkgrey">
    <h4 style="color: white">Catégories</h4>
    {{ form_row(form.categories) }}
</div>

        <div class="col-md-6">
            <h4 style="color: white">Prix</h4>
            <p style="color: white">min : <span id="value-min" style="color: greenyellow"></span> €</p>
            {{ form_row(form.min_price) }}
        </div>
        <div class="col-md-6">
            <p style="color: white">max : <span id="value-max" style="color: indianred"></span> €</p>
            {{ form_row(form.max_price) }}
        </div>

<button type="submit" class="btn btn-primary w-100" id="btn_filtre">Filtrer</button>
{{ form_end(form) }}

{% block javascripts %}
    <script>



        var slider_min = document.getElementById('min_price');
        var slider_max = document.getElementById('max_price');

        slider_min.classList.remove("form-control");
        slider_max.classList.remove("form-control");


        var output_min = document.getElementById('value-min');
        var output_max = document.getElementById('value-max');

        output_min.innerHTML = slider_min.value;
        output_max.innerHTML = slider_max.value;


        slider_min.oninput = function() {
            output_min.innerHTML = this.value;
        }
        slider_max.oninput = function() {
            output_max.innerHTML = this.value;
        }
    </script>
{% endblock %}

